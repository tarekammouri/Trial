#include <iostream>
using namespace std;

void main()
{
    string word;
    cout << "Inter you word here:" << "\n";
    cin >> word;
    if (word[0] >= 'A' && word[0] <= 'Z') {
        cout << word[0] << "\n";
    }
    else {
        if (word[0] >= 'a' && word[0] <= 'z') {
            char L = static_cast<char>(word[0]);
            L = L - 32;
            cout << L << "\n";
        }
        else {
            cout << "invalid word" << "\n";
        }
    }
    system("pause");
};
